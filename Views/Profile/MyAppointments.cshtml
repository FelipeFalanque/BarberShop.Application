@using BarberShop.Application.Models;
@model List<AppointmentViewModel>

<a class="btn btn-primary mb-2" asp-controller="Management" asp-action="CreateUser">Novo Cadastro</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Celular</th>
            <th scope="col">Cadastro</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @{
            @foreach (AppointmentViewModel appointment in Model)
            {
                <tr>
                    <td>@appointment.DayText</td>
                    <td>@appointment.Hour</td>
                    <td>@appointment.Minute</td>
                    <td><a class="btn btn-link" asp-controller="Management" asp-action="Details" asp-route-id="@appointment.Day">Detalhes</a></td>
                </tr>
            }
        }
    </tbody>
</table>